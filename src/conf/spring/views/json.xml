<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:json="http://ry1.org/schema/json-view"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://ry1.org/schema/json-view http://ry1.org/schema/json-view-1.0.xsd">
		
	<json:list id="idOnly">
		<json:property name="id"/>
	</json:list>
	
	<json:list id="lectureAndSlides">
		<json:property name="id"/>
		<json:property name="title"/>
		<json:list name="slides">
			<json:property name="id"/>
			<json:property name="title"/>
			<json:property name="body"/>
		</json:list>
	</json:list>
</beans>