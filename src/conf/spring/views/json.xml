<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<beans:beans
	xmlns="http://ry1.org/schema/json-view"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://ry1.org/schema/json-view http://ry1.org/schema/json-view-1.0.xsd">
		
	<list id="idOnly">
		<property name="id"/>
	</list>
	
	<list id="lectureAndSlides">
		<property name="id"/>
		<property name="title"/>
		<list name="slides">
			<property name="id"/>
			<property name="title"/>
			<property name="body"/>
		</list>
	</list>
</beans:beans>