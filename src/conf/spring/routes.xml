<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<beans:beans 
	xmlns="http://ry1.org/schema/routes"
	xmlns:r="http://ry1.org/schema/routes"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://ry1.org/schema/routes http://ry1.org/schema/routes-1.0.xsd">
	
	<util:list id="routes">
		<connect
			r:pattern="/"
			r:name="home"
			controller="home"/>
		
		<connect
			r:pattern="/dashboard"
			r:name="dashboard"
			controller="dashboard"
			action="index"/>
		
		<connect r:pattern="/welcome" controller="newUser"/>
		<connect r:pattern="/enter" controller="loginForm"/>
		<connect
			r:pattern="/exit"
			r:name="logOut"/>
		
		<connect r:pattern="/profile" r:name="editProfile" controller="profile"/>
		
		<connect r:pattern="/student/subjects/" controller="studentSubject" action="index"/>
		<connect r:pattern="/student/subjects/:subject" controller="studentSubject" action="show"/>
		<connect r:pattern="/student/courses/:action" controller="studentCourse" action="index"/>
		<connect r:pattern="/student/courses/:id/:action" controller="studentCourse" action="show"/>
		
		<connect r:pattern="/lectures/:lectureId" controller="lecture"/>
		<connect r:pattern="/lectures/:lectureId/watch" controller="lectureSession"/>
		<connect r:pattern="/watch/:lectureSessionId" controller="lectureSession"/>
		<connect r:pattern="/watch/:lectureSessionId/submit/freeform" controller="acceptFreeformSubmission"/>
		<connect
			r:pattern="/slides/:id.png"
			r:name="slideImage"
			controller="slideImage"/>
		<connect
			r:pattern="/slides/previews/:id.png"
			r:name="slideThumbnailImage" 
			controller="slideImage"
			type="thumbnail"/>
		<connect r:pattern="/ink/slides/:slideSessionId/:inkIndex.png" controller="inkImage"/>
		<connect r:pattern="/ink/whiteboards/:whiteboardId/:inkIndex.png" controller="whiteboardImage"/>
		<connect r:pattern="/instructor/courses/create" controller="createCourse"/>
		
		<connect r:pattern="/instructor/courses/:courseId/createLecture" controller="lectureCreate"/>
		<connect r:pattern="/instructor/courses/:action" controller="instructorCourse" action="index"/>
		<connect r:pattern="/instructor/courses/:id/:action" controller="instructorCourse" action="show"/>
		
		<connect r:pattern="/instructor/lectures/:id/:action" controller="instructorLecture" action="show"/>
		<connect r:pattern="/instructor/lectures/:id.:format" controller="instructorLecture" action="show"/>
		<connect r:pattern="/instructor/lectures/:lectureId/slides/create" controller="newSlide"/>
		<connect r:pattern="/instructor/slides/:id/edit" controller="simpleEditSlide"/>
		
		<connect r:pattern="/instructor/lectureSession/:id/:action" controller="instructorLectureSession" action="show"/>
		
		<connect r:pattern="/admin/" controller="adminDashboard"/>
		<connect r:pattern="/admin/addRole" controller="simpleAddRole"/>
		<connect r:pattern="/admin/removeRole" controller="simpleRemoveRole"/>
	</util:list>
</beans:beans>