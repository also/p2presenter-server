<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:file:/presenter/db</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.connection.hsqldb.default_table_type">cached</property>
        
        <mapping class="edu.uoregon.cs.presenter.entity.Slide"/>
        <mapping class="edu.uoregon.cs.presenter.entity.InteractivityDefinition"/>
        <mapping class="edu.uoregon.cs.presenter.entity.Course"/>
        <mapping class="edu.uoregon.cs.presenter.entity.Lecture"/>
        <mapping class="edu.uoregon.cs.presenter.entity.LectureSession"/>
        <mapping class="edu.uoregon.cs.presenter.entity.SlideSession"/>
        <mapping class="edu.uoregon.cs.presenter.entity.Person"/>
        <mapping class="edu.uoregon.cs.presenter.entity.Whiteboard"/>
        
        <mapping class="edu.uoregon.cs.presenter.entity.FreeformSubmissionDefinition"/>
        <mapping class="edu.uoregon.cs.presenter.entity.FreeformSubmission"/>
        <mapping class="edu.uoregon.cs.presenter.entity.MultipleChoiceAnswer"/>
        <mapping class="edu.uoregon.cs.presenter.entity.MultipleChoiceQuestion"/>
        <mapping class="edu.uoregon.cs.presenter.entity.Submission"/>
        <mapping class="edu.uoregon.cs.presenter.entity.SubmissionDefinition"/>
        <mapping class="edu.uoregon.cs.presenter.entity.SubmissionSession"/>
    </session-factory>
</hibernate-configuration>
